<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'Brewski Buddy'}) %>
    <link rel="stylesheet" href="/styles/beer-index.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2 class="text-4xl font-bold mb-2">Top Picks</h2>
        <h3 class="text-xl">Look around and see if anything catches your attention!</h3>
    </section>

    <main>
        <section class="listings py-8">
            <div class="container mx-auto px-4 flex flex-wrap justify-center">
                <% for (let beer of beers) { %>
                    <div class="max-w-sm w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 p-4">
                        <div class="beer-card">
                            <img class="w-full h-48 object-cover object-center" src="<%= beer.photo %>" alt="<%= beer.type %>">
                            
                            <div class="p-4">
                                <h4 class="text-xl font-semibold mb-2"><%= beer.type %></h4>
                                <p class="text-gray-700 mb-2">ABV: <%= beer.alcoholByVolume %> %</p>
                                <a href="/beers/<%= beer._id %>"
                                    class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">Learn
                                More</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
