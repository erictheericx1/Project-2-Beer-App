<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Create an review | About Rad Retro Action Figures'}) %>
    <link rel="stylesheet" href="/styles/beer-form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="hero">
        <h2>Customer Review</h2>
        <h4><i>You're reviewing this beer <a href="/beers/<%= beer._id %>"><%= beer.name %></a></i></h4>
    </section>

    <form action="/reviews/create/<%= beer._id %>" method="POST">
        <label for="reviewerName">Reviewer Name:</label><br>
        <input type="text" id="reviewerName" name="reviewerName" required><br>

        <label for="reviewerTitle">Reviewer Title:</label><br>
        <input type="Title" id="reviewerTitle" name="reviewerTitle" required><br>

        <label for="reviewerContent">Reviewer Content:</label><br>
        <input type="tel" id="reviewerContent" name="reviewerContent" required><br>

        <label for="rating">Reviewer Rating:</label><br>
        <input type="number" id="rating" name="rating" min="0" value="0"><br>

        <input type="submit" value="Submit">
    </form>

    <%- include('../partials/footer.ejs') %>
</body>

</html>