<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'My reviews | About Brewski Buddy'}) %>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/rev-details.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="review bg-gray-100 py-8">
        <div class="container mx-auto px-4">
            <h1 class="text-3xl font-bold mb-4">Reviewer: <%= app.reviewer %></h1>
            <table class="border-collapse">
                <tr>
                    <th class="py-2 pr-4">
                        <h2 class="font-semibold">Title:</h2>
                    </th>
                    <td class="py-2">
                        <h2><%= app.title %></h2>
                    </td>
                </tr>
                <tr>
                    <th class="py-2 pr-4">
                        <h2 class="font-semibold">Rating:</h2>
                    </th>
                    <td class="py-2">
                        <h2><%= app.rating %></h2>
                    </td>
                </tr>
                <tr>
                    <th class="py-2 pr-4">
                        <h2 class="font-semibold">Review:</h2>
                    </th>
                    <td class="py-2">
                        <h2><%= app.review %></h2>
                    </td>
                </tr>
            </table>

            <form method="POST" action="/reviews/<%= app._id %>?_method=DELETE">
                <input class="btn bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 mt-4" type="submit" value="Delete" />
            </form>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %>
</body>

</html>
