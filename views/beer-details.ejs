<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `${beer.type} | Brewski Buddy`}) %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"     integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <link rel="stylesheet" href="/styles/beer-details.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <img src="<%= beer.photo %>">
        <h2 class="beer-type"><%= beer.type %></h2>
        <section>
            <p><strong>Alcohol By Volume (ABV):</strong> <%= beer.alcoholByVolume %></p>
            <p><strong>Description:</strong> <%= beer.description %></p>
            <p><strong>Rating:</strong> <%= beer.rating %></p>
            <p><strong>Variations:</strong> <%= beer.variations %></p>
            <p><strong>Food Pairings:</strong> <%= beer.foodPairing %></p>
        </section>

        <section class="actions">
            <button class="btn"><a href="/beers/<%= beer._id %>/edit">Edit</a></button>
            <form method="POST" action="/beers/<%= beer._id %>?_method=DELETE">
                <input class="btn" type="submit" value="Delete" />
            </form>
            <button class="btn"><a href="/reviews/new/<%= beer._id %>">Review</a></button>
        </section>
    </div>
    
    <%- include('./partials/footer.ejs') %>  
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>
